RewriteEngine On
# RewriteBase /prin/y1d13/advanced-web-technologies/grocery-store/public/ # Usually not needed if .htaccess is in the correct dir

# Remove trailing slash from URIs (optional, helps prevent duplicate content issues)
# RewriteCond %{REQUEST_URI} (.+)/$
# RewriteRule ^ %1 [L,R=301]

# If the request is not for an existing file or directory...
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# ...rewrite the request to index.php in the current directory (public/)
RewriteRule ^ index.php [L]